{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@central-factory/core": ["libs/core/src/index.ts"],
      "@central-factory/core/*": ["libs/core/src/lib/*"],
      "@central-factory/gatekeeper": ["libs/gatekeeper/src/index.ts"],
      "@central-factory/integrations": ["libs/integrations/src/index.ts"],
      "@central-factory/integrations/*": ["libs/integrations/src/lib/*"],
      "@central-factory/web-components": ["libs/web-components/src/index.ts"],
      "@central-factory/web-components/*": ["libs/web-components/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
