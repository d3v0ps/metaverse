{
  "asar": false,
  "directories": {
    "output": "release/"
  },
  "files": [
    "src/main.electron.js"
  ],
  "extraResources": [
    {
      "from": "dist/apps/portal",
      "to": "app",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "target": [
      "portable"
    ]
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  }
}
