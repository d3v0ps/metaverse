{
  "$ref": "#/definitions/Root",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "Application": {
      "additionalProperties": false,
      "properties": {
        "additionalProperties": {
          "$ref": "#/definitions/ApplicationAdditionalProperties"
        },
        "backgroundColor": {
          "type": "string"
        },
        "categories": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "createdAt": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "iarcRatingId": {
          "type": "string"
        },
        "icons": {
          "items": {
            "$ref": "#/definitions/ApplicationIcon"
          },
          "type": "array"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "screenshots": {
          "items": {
            "$ref": "#/definitions/ApplicationScreenshot"
          },
          "type": "array"
        },
        "shortName": {
          "type": "string"
        },
        "shortcuts": {
          "items": {
            "$ref": "#/definitions/ApplicationShortcut"
          },
          "type": "array"
        },
        "startUrl": {
          "type": "string"
        },
        "themeColor": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "startUrl"
      ],
      "type": "object"
    },
    "ApplicationAdditionalProperties": {
      "additionalProperties": false,
      "description": "Non Web Manifest standard included properties ",
      "properties": {
        "author": {
          "$ref": "#/definitions/ApplicationAuthor"
        },
        "colors": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "color": {
                "type": "string"
              },
              "variation": {
                "$ref": "#/definitions/ColorVariation"
              }
            },
            "required": [
              "color",
              "variation"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "defaultShortcut": {
          "type": "string"
        },
        "disabled": {
          "type": "boolean"
        },
        "internal": {
          "type": "boolean"
        },
        "originalManifest": {
          "type": "string"
        },
        "permissions": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "kind": {
                "type": "string"
              },
              "mode": {
                "type": "string"
              },
              "target": {
                "type": "string"
              }
            },
            "required": [
              "kind",
              "mode",
              "target"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "renderingType": {
          "$ref": "#/definitions/ApplicationRenderingType"
        },
        "sidebarShortcuts": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "starred": {
          "type": "boolean"
        },
        "supportsBrowser": {
          "type": "boolean"
        }
      },
      "required": [
        "author"
      ],
      "type": "object"
    },
    "ApplicationAuthor": {
      "additionalProperties": false,
      "properties": {
        "icon": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ],
      "type": "object"
    },
    "ApplicationIcon": {
      "additionalProperties": false,
      "properties": {
        "sizes": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "src",
        "sizes",
        "type"
      ],
      "type": "object"
    },
    "ApplicationRenderingType": {
      "enum": [
        "Webview",
        "Local",
        "AngularElement",
        "WebpackModuleFederation",
        "Unknown"
      ],
      "type": "string"
    },
    "ApplicationScreenshot": {
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "platform": {
          "type": "string"
        },
        "sizes": {
          "type": "string"
        },
        "src": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": [
        "src",
        "sizes",
        "type",
        "platform",
        "label"
      ],
      "type": "object"
    },
    "ApplicationShortcut": {
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "icons": {
          "items": {
            "$ref": "#/definitions/ApplicationIcon"
          },
          "type": "array"
        },
        "name": {
          "type": "string"
        },
        "shortName": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "url"
      ],
      "type": "object"
    },
    "ColorVariation": {
      "enum": [
        "primary",
        "secondary",
        "success",
        "warning",
        "danger",
        "info",
        "light",
        "dark"
      ],
      "type": "string"
    },
    "Root": {
      "$ref": "#/definitions/Application"
    }
  },
  "title": "applications"
}
